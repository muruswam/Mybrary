<% if(locals.errorMessage != null) { %>
    <h4><div class="error-message"><%= errorMessage %></div></h4>
<% } %>
<form method="POST" action="/authors">
    <div class="form-row">
        <div class="form-item">
            <label>Name</label>
            <input type="text" name="name" id="name" />
        </div>
    </div>
    <div  class="form-row btn-row form-row-end">
        <a class="btn btn-danger" href="/authors">Cancel</a>
        <button class="btn btn-primary" type="submit" >Save</button>
    </div>
</form>