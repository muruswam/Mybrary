<h3>Book Search</h3>

<% if(locals.errorMessage != null) { %>
    <h2><%= errorMessage %></h2>
<% } %> 
<form action="/books"  method="GET">
    <div>
        <label> Title</label>
        <input type="text" name="title"  />
    </div>
    <div>
        <label>Published Before</label>
        <input type="date" name="publishedBefore" />        
    </div>
    <div>
        <label>Published After</label>
        <input type="date" name="publishedAfter" />        
    </div>
    <button type="button"> Cencel </button>
    <button type="submit"> Search </button>
</form>
<br>


<div>
    <% if(locals.books != null) {  books.forEach(function(book){ %>
        <img src="<%= book.coverImagePath %>" width="150px" height="150px" />
    <% })} %>
 </div>