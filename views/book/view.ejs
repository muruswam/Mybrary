<% if(locals.errorMessage != null) { %> 
    <h3><%= errorMessage %> </h3>
<% } %>

<h3 class="page-header">Book Details</h3>
<br>
<div>
    <h1><%= book.title %></h1>
</div>
<div>
    <img src="<%=book.coverImagePath%>" width="100" height="150" alt="Not able to load">     
</div>
<div>
    <label for="author">Author :</label><%= " "+book.author.name %> 
</div>
<div>
    <label for="Publish Date">Publish Date :</label><%= " "+book.publishedDate.toDateString() %> 
</div><div>
    <label for="Page Count">Page Count :</label><%= " "+book.pageCount %> 
</div><div>
    <label for="description">Description :</label><%= " "+book.description %> 
</div>
<a href="/books/<%=book.id%>/edit">Update</a>
<form action="/books/<%=book.id%>?_method=DELETE"   method="POST" >
    <button type="submit"> Delete </button>
</form>
<a href="/authors/<%=book.author.id%>">View Author</a>
